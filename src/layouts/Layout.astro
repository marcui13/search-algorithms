---
import ThemeToggle from "../components/ThemeToggle.astro";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Sitio educativo sobre algoritmos de búsqueda" } =
  Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <style>
      :root {
        /* Light theme */
        --color-bg: #fafafa;
        --color-text: #1a1a1a;
        --color-text-muted: #6b7280;
        --color-border: #e5e7eb;
        --color-accent: #2563eb;
        --color-accent-light: #3b82f6;
        --color-card-bg: #ffffff;
        --color-code-bg: #f8fafc;
        --color-success: #10b981;
        --color-warning: #f59e0b;
        --color-error: #ef4444;

        /* Modern dev fonts */
        --font-sans: "Inter", system-ui, -apple-system, sans-serif;
        --font-mono: "JetBrains Mono", ui-monospace, "Cascadia Code",
          "Roboto Mono", Consolas, "Courier New", monospace;
        --font-code: "JetBrains Mono", ui-monospace, monospace;
      }

      /* Dark theme */
      :root.dark {
        --color-bg: #0f172a;
        --color-text: #f1f5f9;
        --color-text-muted: #94a3b8;
        --color-border: #334155;
        --color-accent: #60a5fa;
        --color-accent-light: #93c5fd;
        --color-card-bg: #1e293b;
        --color-code-bg: #1e293b;
        --color-success: #34d399;
        --color-warning: #fbbf24;
        --color-error: #f87171;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        font-family: var(--font-sans);
        line-height: 1.6;
        transition:
          background-color 0.3s ease,
          color 0.3s ease;
      }

      body {
        background-color: var(--color-bg);
        color: var(--color-text);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        transition:
          background-color 0.3s ease,
          color 0.3s ease;
      }

      /* Typography improvements */
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: var(--font-mono);
        font-weight: 700;
        letter-spacing: -0.025em;
      }

      code,
      pre {
        font-family: var(--font-code);
        font-feature-settings:
          "liga" 1,
          "calt" 1;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
      }

      header {
        border-bottom: 1px solid var(--color-border);
        background: var(--color-bg);
        position: sticky;
        top: 0;
        z-index: 100;
        backdrop-filter: blur(8px);
        transition: all 0.3s ease;
      }

      .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
        gap: 2rem;
      }

      .header-left {
        display: flex;
        align-items: center;
        gap: 2rem;
      }

      .header-right {
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .logo {
        font-size: 1.5rem;
        font-weight: 700;
        font-family: var(--font-mono);
        color: var(--color-text);
        text-decoration: none;
        transition:
          color 0.2s ease,
          transform 0.2s ease;
      }

      .logo:hover {
        color: var(--color-accent);
        transform: translateY(-1px);
      }

      nav ul {
        display: flex;
        list-style: none;
        gap: 2rem;
      }

      nav a {
        color: var(--color-text-muted);
        text-decoration: none;
        font-weight: 500;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        transition: all 0.2s ease;
        position: relative;
      }

      nav a:hover {
        color: var(--color-accent);
        background: var(--color-code-bg);
        transform: translateY(-1px);
      }

      /* Add subtle animations */
      nav a::before {
        content: "";
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 2px;
        background: var(--color-accent);
        transition: all 0.3s ease;
        transform: translateX(-50%);
      }

      nav a:hover::before {
        width: 80%;
      }

      main {
        flex: 1;
        padding: 2rem 0;
      }

      footer {
        border-top: 1px solid var(--color-border);
        padding: 2rem 0;
        background: var(--color-code-bg);
        color: var(--color-text-muted);
        font-size: 0.875rem;
      }

      .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1.5rem;
      }

      .footer-info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      .footer-author {
        font-family: var(--font-mono);
        color: var(--color-accent);
        font-weight: 500;
      }

      .footer-links {
        display: flex;
        gap: 1.5rem;
        align-items: center;
      }

      .footer-links a {
        color: var(--color-text-muted);
        text-decoration: none;
        padding: 0.5rem;
        border-radius: 6px;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .footer-links a:hover {
        color: var(--color-accent);
        background: var(--color-bg);
        transform: translateY(-1px);
      }

      @media (max-width: 768px) {
        .header-content {
          flex-direction: column;
          gap: 1rem;
        }

        .header-left {
          flex-direction: column;
          gap: 1rem;
          text-align: center;
        }

        nav ul {
          gap: 0.5rem;
          flex-wrap: wrap;
          justify-content: center;
        }

        .footer-content {
          flex-direction: column;
          text-align: center;
        }

        .footer-links {
          justify-content: center;
        }
      }

      /* Global Animations */
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes pulse {
        0%,
        100% {
          opacity: 1;
          transform: scale(1);
        }
        50% {
          opacity: 0.8;
          transform: scale(1.05);
        }
      }

      /* Animation utility classes */
      .animate-fade-in {
        animation: fadeIn 0.6s ease-out;
      }

      .animate-fade-in-up {
        animation: fadeInUp 0.6s ease-out;
      }

      .animate-pulse {
        animation: pulse 2s infinite;
      }

      .hover-lift {
        transition:
          transform 0.2s ease,
          box-shadow 0.2s ease;
      }

      .hover-lift:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
      }

      /* Card stack animation */
      .card-stack > * {
        animation: fadeInUp 0.6s ease-out;
      }

      .card-stack > *:nth-child(1) {
        animation-delay: 0.1s;
      }
      .card-stack > *:nth-child(2) {
        animation-delay: 0.2s;
      }
      .card-stack > *:nth-child(3) {
        animation-delay: 0.3s;
      }
      .card-stack > *:nth-child(4) {
        animation-delay: 0.4s;
      }
      .card-stack > *:nth-child(5) {
        animation-delay: 0.5s;
      }
      .card-stack > *:nth-child(6) {
        animation-delay: 0.6s;
      }

      /* Reduce motion for accessibility */
      @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <div class="header-content">
          <div class="header-left">
            <a href="/" class="logo">🔍 Search Algorithms</a>
            <nav>
              <ul>
                <li><a href="/">🏠 Inicio</a></li>
                <li><a href="/secciones/introduccion">📚 Introducción</a></li>
                <li><a href="/secciones/no-informadas">🌐 No Informadas</a></li>
                <li><a href="/secciones/informadas">🎯 Informadas</a></li>
                <li><a href="/secciones/local">⛰️ Local</a></li>
                <li><a href="/secciones/adversaria">♟️ Adversaria</a></li>
              </ul>
            </nav>
          </div>
          <div class="header-right">
            <ThemeToggle />
          </div>
        </div>
      </div>
    </header>

    <main>
      <div class="container">
        <slot />
      </div>
    </main>

    <footer>
