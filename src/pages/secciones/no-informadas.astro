      background: var(--color-accent);
      color: white;
      padding: 1rem 2rem;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 600;
      transition: background-color 0.2s ease;
    }

    .next-button:hover {
      background: var(--color-accent-light);
    }

    @media (max-width: 768px) {
      .characteristics {
        grid-template-columns: 1fr;
      }

      .algorithms-grid {
