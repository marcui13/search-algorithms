  <style>
    .intro-section {
      margin-bottom: 4rem;
    }

    .intro-section h2 {
      font-size: 2rem;
      margin-bottom: 1.5rem;
      color: var(--color-text);
    }

    .intro-section p {
      font-size: 1.125rem;
      line-height: 1.7;
      color: var(--color-text-muted);
      margin-bottom: 2rem;
    }

    .characteristics {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }

    .char-card {
      background: var(--color-card-bg);
      border: 1px solid var(--color-border);
      border-radius: 8px;
      padding: 1.5rem;
      text-align: center;
    }

    .char-card h3 {
      color: var(--color-accent);
      margin-bottom: 1rem;
      font-size: 1.125rem;
    }

    .char-card p {
      color: var(--color-text-muted);
      font-size: 0.9rem;
      line-height: 1.6;
      margin: 0;
    }

    .algorithms-section {
      margin-bottom: 4rem;
    }

    .algorithms-section h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
      color: var(--color-text);
      text-align: center;
    }

    .algorithms-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 1.5rem;
    }

    .comparison-section {
      margin-bottom: 4rem;
    }

    .comparison-section h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
      color: var(--color-text);
      text-align: center;
    }

    .comparison-table-container {
      overflow-x: auto;
    }

    .comparison-table {
      width: 100%;
      border-collapse: collapse;
      background: var(--color-card-bg);
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .comparison-table th {
      background: var(--color-accent);
      color: white;
      padding: 1rem;
      text-align: left;
      font-weight: 600;
    }

    .comparison-table td {
      padding: 1rem;
      border-bottom: 1px solid var(--color-border);
    }

    .comparison-table tr:last-child td {
      border-bottom: none;
    }

    .algorithm-name a {
      color: var(--color-accent);
      text-decoration: none;
      font-weight: 500;
    }

    .algorithm-name a:hover {
      text-decoration: underline;
    }

    .status {
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.875rem;
      font-weight: 500;
    }

    .status.yes {
      background: var(--color-success);
      color: white;
      opacity: 0.9;
    }

    .status.no {
      background: var(--color-warning);
      color: white;
      opacity: 0.9;
    }

    .complexity {
      font-family: var(--font-mono);
      font-size: 0.875rem;
      color: var(--color-accent);
    }

    .strategy-guide {
      margin-bottom: 4rem;
    }

    .strategy-guide h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
      color: var(--color-text);
      text-align: center;
    }

    .guide-cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 1.5rem;
    }

    .guide-card {
      border-radius: 8px;
      padding: 2rem;
      color: white;
    }

    .guide-card.bfs {
      background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    }

    .guide-card.dfs {
      background: linear-gradient(135deg, #10b981, #059669);
    }

    .guide-card.ucs {
      background: linear-gradient(135deg, #f59e0b, #d97706);
    }

    .guide-card h3 {
      margin-bottom: 1.5rem;
      font-size: 1.25rem;
    }

    .guide-card ul {
      list-style: none;
      padding: 0;
    }

    .guide-card li {
      padding: 0.5rem 0;
      position: relative;
      padding-left: 1.5rem;
    }

    .guide-card li::before {
