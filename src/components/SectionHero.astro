---
interface Props {
  title: string;
  subtitle: string;
  description: string;
}

const { title, subtitle, description } = Astro.props;
---

<section class="section-hero">
  <div class="hero-content">
    <h1>{title}</h1>
    <p class="subtitle">{subtitle}</p>
    <div class="description">
      <p>{description}</p>
    </div>
  </div>
</section>

<style>
  .section-hero {
    padding: 3rem 0;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 3rem;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .section-hero h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--color-accent);
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .description p {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0;
  }

  @media (max-width: 768px) {
    .section-hero h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1.125rem;
    }

    .description p {
      font-size: 1rem;
    }
  }
</style>