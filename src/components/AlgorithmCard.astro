---
interface Props {
  title: string;
  description: string;
  href: string;
  complexity?: string;
  optimal?: boolean;
}

const { title, description, href, complexity, optimal } = Astro.props;
---

<a href={href} class="algorithm-card">
  <div class="card-header">
    <h3>{title}</h3>
    {optimal && <span class="optimal-badge">Óptimo</span>}
  </div>

  <p class="description">{description}</p>

  {complexity && (
    <div class="complexity">
      <span class="complexity-label">Complejidad:</span>
      <code>{complexity}</code>
    </div>
  )}

  <div class="card-footer">
    <span class="explore-text">Explorar algoritmo →</span>
  </div>
</a>

<style>
  .algorithm-card {
    display: block;
    padding: 1.5rem;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    background: var(--color-card-bg);
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .algorithm-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(37, 99, 235, 0.1),
      transparent
    );
    transition: left 0.5s ease;
  }

  .algorithm-card:hover::before {
    left: 100%;
  }

  .algorithm-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.75rem;
    gap: 1rem;
  }

  .algorithm-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-accent);
    margin: 0;
    flex: 1;
  }

  .optimal-badge {
    background: var(--color-success);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    white-space: nowrap;
    animation: pulse 2s infinite;
  }

  .description {
    color: var(--color-text-muted);
    line-height: 1.6;
    margin: 0 0 1rem 0;
    flex: 1;
  }

  .complexity {
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }

  .complexity-label {
    color: var(--color-text-muted);
    font-weight: 500;
  }

  .complexity code {
    background: var(--color-code-bg);
    color: var(--color-accent);
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    font-family: var(--font-code);
    font-size: 0.875rem;
    margin-left: 0.5rem;
    border: 1px solid var(--color-border);
    font-weight: 600;
  }

  .card-footer {
    border-top: 1px solid var(--color-border);
    padding-top: 1rem;
    margin-top: auto;
  }

  .explore-text {
    color: var(--color-accent);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .algorithm-card:hover .explore-text {
    color: var(--color-accent-light);
  }
</style>